{
   "compilerOptions": {
     "target": "es2017",                          
     "module": "commonjs",                     
     "lib": ["es5","es6"],                             
     "allowJs": true,                       
     "outDir": "./dist",
     "rootDir": "./src",
     "removeComments": true,                
     "strict": false,                           
     "typeRoots": [
       "./node_modules/@types",
       "./src/@types"
     ],                       
     "esModuleInterop": true,
     "moduleResolution":"Node",                  
     "resolveJsonModule": true,                
     "experimentalDecorators": true,        
     "emitDecoratorMetadata": true,         
     "skipLibCheck": true,                     
     "forceConsistentCasingInFileNames": true,
     "baseUrl": ".",
     "paths": {
       "@config/*": ["./src/config/*"],
       "@models/*":["./src/data/models/*"]
     }  
   },
   "include": [
     "src/**/*"
   ],
   "exclude": [
     "node_modules"
   ]
 }
 